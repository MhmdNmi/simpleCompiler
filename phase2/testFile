int positiveSum(int a, int b)
<
    int sum.
    sum = a + b.
    if(sum)
    <
        return sum.
    >
    else
    <
        return 0.
    >
>

int main()
<
    int a = 8.
    int b = 5.
    int counter = 0.
    while(positiveSum(a, b))
    <
        counter = counter + 1.
        a = a + 1.
        b = b + 1.
    >
    $$ end of program
    return 0.
>
